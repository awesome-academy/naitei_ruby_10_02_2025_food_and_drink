<div id="confirm-delete-modal-<%= product.id %>"
     class="fixed inset-0 z-50 hidden flex items-center justify-center bg-black bg-opacity-50">
  <div class="bg-white rounded-lg shadow-lg p-6 w-96 border border-gray-200">
    <h2 class="text-xl font-semibold text-red-600 mb-4">
      <%= t "product.confirm_delete_title" %>
    </h2>

    <p class="text-gray-700 mb-4">
      <%= t "product.confirm_delete_message" %>
    </p>

    <div class="flex justify-end space-x-4">
      <%= link_to t("confirm"),
                  admin_product_path(product),
                  method: :delete,
                  data: { turbo_method: :delete },
                  class: "px-4 py-2 button-common" %>

      <button class="px-4 py-2 cancel-button close-delete-confirmation"
              data-product-id="<%= product.id %>">
        <%= t "cancel" %>
      </button>
    </div>
  </div>
</div>
