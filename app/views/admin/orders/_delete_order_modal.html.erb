<div id="deleteOrderModal<%= order.id %>" class="fixed inset-0 z-50 hidden items-center justify-center bg-black bg-opacity-50">
  <div class="bg-white rounded-lg w-full max-w-md mx-4 p-6">
    <div class="flex justify-between items-center border-b pb-4 mb-4">
      <h2 class="text-xl font-bold text-red-600"><%= t "delete_confirm_title" %></h2>
      <button onclick="closeDeleteOrderModal('<%= order.id %>')" class="text-gray-500 hover:text-gray-700">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <p class="text-gray-700 mb-4"><%= t "delete_confirm_message" %></p>

    <div class="flex justify-end space-x-2">
      <button onclick="closeDeleteOrderModal('<%= order.id %>')" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400">
        <%= t "cancel" %>
      </button>

      <%= link_to admin_order_path(order),
            data: { turbo_method: :delete },
            class: "px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700" do %>
        <%= t "confirm" %>
      <% end %>
    </div>
  </div>
</div>
