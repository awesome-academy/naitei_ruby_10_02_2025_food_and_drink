<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold"><%= t "order.manage_orders" %></h1>

    <div class="flex space-x-2">
      <%= link_to new_admin_order_path, class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 flex items-center" do %>
        <i class="fa-solid fa-plus mr-2"></i>
        <%= t "order.new_order" %>
      <% end %>
    </div>
  </div>

  <%= form_with url: admin_orders_path, method: :get, local: true do %>
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <label for="status-filter" class="block text-sm font-medium text-gray-700 mb-1">
            <%= t "order.status.name" %>
          </label>
          <%= select_tag :status,
                options_for_select(Order.statuses.reject { |k, _| k == "draft" }
                  .map { |k, v| [t("order.status.#{k}"), k] }, params[:status]),
                prompt: t("order.status.name"),
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <label for="date-filter" class="block text-sm font-medium text-gray-700 mb-1">
            <%= t "order.order_date" %>
          </label>
          <%= date_field_tag :date, params[:date],
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>

      <div class="flex justify-end mt-4">
        <%= submit_tag t("order.apply_filters"),
              class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
      </div>
    </div>
  <% end %>

  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t "activerecord.attributes.order.id" %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t "activerecord.attributes.order.user" %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t "activerecord.attributes.order.created_at" %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t "activerecord.attributes.order.total_price" %>
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t "activerecord.attributes.order.status" %>
            </th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t "actions" %>
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <%= render partial: "order_item", collection: @orders, as: :order %>
        </tbody>
      </table>
    </div>

    <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
      <div class="flex justify-center items-center">
        <%== pagy_nav @pagy %>
      </div>
    </div>
  </div>
</div>
