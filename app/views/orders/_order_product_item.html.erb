<li class="py-6 flex items-center">
  <% order_items_by_product_id = @order_items.index_by(&:product_id) %>
  <div class="flex-shrink-0 w-24 h-24 rounded-md overflow-hidden mr-4">
    <%= image_tag product.image, alt: "product_image", class: "w-full h-full object-cover" %>
  </div>

  <div class="flex-1 flex items-center justify-between">
    <div>
      <h3 class="text-base font-medium text-gray-900">
        <%= product.name %>
      </h3>
      <p class="mt-1 text-sm text-gray-500">
        <% order_item = order_items_by_product_id[product.id] %>
        <%= number_to_currency price_in(order_item.unit_price) %>
      </p>
    </div>

    <div class="flex items-center">
      <button class="w-6 h-6 flex items-center justify-center border border-gray-300 rounded-md hover:bg-gray-50">
        <i class="fa-solid fa-minus h-3 w-3"></i>
      </button>
      <span class="mx-2 w-8 text-center">
        <%= order_item.quantity %>
      </span>
      <button class="w-6 h-6 flex items-center justify-center border border-gray-300 rounded-md hover:bg-gray-50">
        <i class="fa-solid fa-plus h-3 w-3"></i>
      </button>
      <button class="ml-4 font-medium text-red-600 hover:text-red-500">
        <i class="fa-solid fa-trash-alt h-4 w-4"></i>
      </button>
    </div>
  </div>
</li>
