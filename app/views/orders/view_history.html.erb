<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">
    <%= t "order.order_history" %>
  </h1>

  <div class="bg-white rounded-lg shadow-md overflow-hidden mb-6">
    <div class="p-6">
      <div class="flex flex-wrap gap-4 mb-4">
        <%= link_to t("all"), view_history_path(user_id: params[:user_id]),
          class: "px-4 py-2 rounded-md #{params[:status].blank? ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>

        <% Order.statuses.keys.each do |status| %>
          <%= link_to t("order.status.#{status}"),
                      view_history_path(user_id: params[:user_id], status: status),
                      class: "px-4 py-2 rounded-md #{params[:status] == status ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" %>
        <% end %>
      </div>
    </div>
  </div>

  <%= render partial: "product_history_item", collection: @orders, as: :order %>

  <div class="flex justify-center mt-8">
    <%== pagy_nav @pagy %>
  </div>
</div>
