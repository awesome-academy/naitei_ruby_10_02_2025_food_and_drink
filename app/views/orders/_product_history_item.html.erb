<div class="bg-white rounded-lg shadow-md overflow-hidden mb-6">
  <div class="p-6">
    <div class="flex flex-col md:flex-row md:items-center justify-between mb-4">
      <div>
        <h2 class="text-lg font-medium text-gray-900"><%= t "order.number" %></h2>
        <p class="text-sm text-gray-500">
          <%= t "order.order_date" %>: <%= l order.created_at, format: :long %>
        </p>
      </div>
      <div class="mt-2 md:mt-0">
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= order.status %>">
          <%= t "order.status.#{order.status}" %>
        </span>
      </div>
    </div>

    <div class="border-t border-gray-200 pt-4">
      <div class="flow-root">
        <ul class="divide-y divide-gray-200">
          <% @order_items = order.order_items %>
          <%= render partial: "checkout_product_item", collection: order.products, as: :product %>
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-200 pt-4 flex justify-between items-center">
      <div>
        <p class="text-lg font-bold text-gray-900">
          <%= t "order.total" %>: <%= number_to_currency price_in(order.total_price) %>
        </p>
      </div>

      <div class="flex space-x-2">
        <%= link_to t("order.details"), "#",
              onclick: "openOrderModal('#{order.id}'); return false;",
              class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
        <%= button_to t("order.reorder"), orders_path(order_id: order.id),
              method: :post, class: "px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50" %>
        <% if order.status == "pending" %>
          <%= button_to t("order.cancel"), order_path(order),
                method: :patch, data: { confirm: t("order.confirm_cancel") },
                class: "px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render "order_detail", order: order %>
